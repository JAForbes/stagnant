{
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"classes": true,
			"classProperties": true
		},
		"babelOptions": {
			"configFile": "./babel.config.json"
		}
	},
	"env": {
		"es6": true
	},
	"globals": {
		"require": true,
		"module": true,
		"exports": true,
		"Promise": true
	},
	"rules": {
		"no-var": 1,
		"no-undef": 2,
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "_"
			}
		],
		"comma-style": [
			"warn",
			"first"
		],
		"operator-linebreak": [
			"warn",
			"before",
			{
				"overrides": {
					"=": "after"
				}
			}
		],
		"no-const-assign": [
			"warn"
		],
		"no-dupe-keys": [
			"warn"
		],
		"no-cond-assign": [
			"warn"
		],
		"no-extra-parens": [
			"warn"
		],
		"no-sparse-arrays": [
			"error"
		],
		"array-callback-return": [
			"error"
		],
		"callback-return": [
			"error"
		],
		"max-depth": [
			"warn",
			4
		],
		"max-len": [
			"warn",
			{
				"code": 80,
				"tabWidth": 2,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignoreUrls": true,
				"ignoreComments": true
			}
		],
		"consistent-return": 2,
		"no-fallthrough": "error",
		"linebreak-style": [
			"error",
			"unix"
		]
	}
}